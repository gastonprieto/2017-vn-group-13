{{#partial "contenido"}}
	<div>
		<div class="title">
			<h1>Visualizacion de Cuentas</h1>
		</div>
		<div class="row selector">
			<h4 class="margin-right-10">Seleccione una Empresa:</h4>
			<div class="btn-group">
				<button type="button" class="btn btn-outline-dark dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Empresas
				</button>
				<div class="dropdown-menu">
					{{#each empresas}}
						<a class="dropdown-item" href="/empresas/{{id}}/cuentas">{{name}}</a>
					{{/each}}
				</div>
			</div>
		</div>
		{{#if cuentas}}
			<table class="table table-bordered table-hover">
				<thead class="thead-inverse">
					<tr>
						<th>Nombre</th>
						<th>Valor</th>
						<th>Año</th>
						<th>Semestre</th>
					</tr>
				</thead>
				<tbody>
					{{#each cuentas}}
						<tr>
							<th>{{name}}</th>
							<th>{{value}}</th>
							<th>{{periodo.year}}</th>
							<th>{{periodo.semester}}</th>
						</tr>
					{{/each}}
				</tbody>
			</table>
		{{else}}
			<h5 class="placeholder">No hay cuentas para mostrar</h5>
		{{/if}}
	</div>
{{/partial}}
{{>layout.hbs}}